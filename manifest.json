{
   "name": "Chrowety",
   "description": "A twitter client for Google Chrome",
   "version": "1.5.31",
   "options_page": "conf.html",
   "background_page": "background.html",
   "browser_action": {
     "default_title": "Chrowety",
     "default_icon": "icones/x16.png",
     "popup": {
        "path": "popup.html"
     }
   },
   "permissions": [
     "tabs",
     "http://twitter.com/",
     "https://twitter.com/",
     "http://3.ly/"
   ],
   "icons": {
     "16": "icones/x16.png",
     "32": "icones/x32.png",
     "48": "icones/x48.png",
     "128":"icones/x128.png"
   },
   "update_url": "http://clients2.google.com/service/update2/crx"
}
